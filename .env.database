# Database Layer Configuration
# Section 3.1.2 B - PostgreSQL Schema Setup

# Database Connection Settings
DB_HOST=localhost
DB_PORT=5432
DB_NAME=text2sql_db

# Admin User (for schema creation)
DB_ADMIN_USER=postgres
DB_ADMIN_PASSWORD=your_admin_password_here

# Read-Only User (for query execution)
DB_READONLY_USER=text2sql_readonly
DB_READONLY_PASSWORD=readonly_secure_password_123

# Read-Write User (for data management)
DB_READWRITE_USER=text2sql_readwrite
DB_READWRITE_PASSWORD=readwrite_secure_password_123

# Performance Settings
ENABLE_QUERY_LOGGING=true
ENABLE_AUDIT_LOGGING=true
