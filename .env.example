# Text2SQL Analytics System - Environment Variables Configuration
# Copy this file to .env and fill in your actual values

# Google Gemini API Configuration
GEMINI_API_KEY=your_gemini_api_key_here

# PostgreSQL Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=northwind
DB_USER=postgres
DB_PASSWORD=your_postgres_password_here

# Read-Only Database User (for Text2SQL query execution)
DB_READONLY_USER=text2sql_readonly
DB_READONLY_PASSWORD=readonly_secure_password_here

# Read-Write Database User (for data management)
DB_READWRITE_USER=text2sql_readwrite
DB_READWRITE_PASSWORD=readwrite_secure_password_here

# Admin Database User (for schema management)
DB_ADMIN_USER=postgres
DB_ADMIN_PASSWORD=your_admin_password_here

# Query Configuration
QUERY_TIMEOUT_SECONDS=5
MAX_RESULT_ROWS=1000

# Cache Configuration
CACHE_TTL_SECONDS=3600
CACHE_DB_PATH=data/query_cache.db

# History Configuration
HISTORY_DB_PATH=data/query_history.db

# Performance Monitoring
MONITOR_DB_PATH=data/performance_monitor.db

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_DEBUG=False

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/text2sql.log
