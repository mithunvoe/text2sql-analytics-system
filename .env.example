# Text2SQL Analytics System - Environment Variables Template
# Copy this file to .env and fill in your actual values

# =============================================================================
# Google Gemini AI Configuration
# =============================================================================
# Get your API key from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# =============================================================================
# Database Configuration
# =============================================================================

# PostgreSQL Configuration (Primary Database)
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=text2sql_analytics
POSTGRES_USER=your_postgres_username
POSTGRES_PASSWORD=your_postgres_password

# SQLite Configuration (Fallback/Development)
SQLITE_DB_PATH=./data/text2sql_analytics.db

# Database Connection String (Auto-generated from above, or override manually)
# DATABASE_URL=postgresql://username:password@localhost:5432/text2sql_analytics
# DATABASE_URL=sqlite:///./data/text2sql_analytics.db

# =============================================================================
# API Server Configuration
# =============================================================================
API_HOST=0.0.0.0
API_PORT=8000
API_DEBUG=False

# CORS Configuration
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8080"]

# =============================================================================
# Performance & Caching Configuration
# =============================================================================

# Query Cache Configuration
CACHE_ENABLED=True
CACHE_TTL_SECONDS=3600
CACHE_MAX_SIZE=1000

# Query Timeout Configuration
QUERY_TIMEOUT_SECONDS=30
MAX_RESULT_ROWS=10000

# Performance Monitoring
PERFORMANCE_MONITORING_ENABLED=True
METRICS_RETENTION_DAYS=30

# =============================================================================
# Logging Configuration
# =============================================================================
LOG_LEVEL=INFO
LOG_FILE_PATH=./logs/text2sql_system.log
LOG_MAX_SIZE_MB=10
LOG_BACKUP_COUNT=5

# =============================================================================
# Security Configuration
# =============================================================================

# API Security
API_SECRET_KEY=your_secret_key_here_change_this_in_production
API_ACCESS_TOKEN_EXPIRE_MINUTES=30

# SQL Security
ALLOWED_SQL_OPERATIONS=["SELECT", "WITH"]
BLOCKED_SQL_KEYWORDS=["DROP", "DELETE", "UPDATE", "INSERT", "ALTER", "CREATE", "TRUNCATE"]

# =============================================================================
# Data Processing Configuration
# =============================================================================

# Data Normalization Pipeline
NORMALIZATION_BATCH_SIZE=1000
NORMALIZATION_MAX_MEMORY_MB=512

# File Processing
MAX_FILE_SIZE_MB=100
SUPPORTED_FILE_FORMATS=["csv", "xlsx", "xls"]

# =============================================================================
# Development & Testing Configuration
# =============================================================================

# Test Database
TEST_DATABASE_URL=sqlite:///./data/test_analytics.db

# Mock AI Responses (for testing)
MOCK_AI_RESPONSES=False
MOCK_AI_DELAY_SECONDS=0.1

# Development Mode
DEBUG_MODE=False
VERBOSE_LOGGING=False

# =============================================================================
# External Services Configuration
# =============================================================================

# Optional: External monitoring services
# SENTRY_DSN=your_sentry_dsn_here
# DATADOG_API_KEY=your_datadog_api_key_here

# =============================================================================
# Instructions
# =============================================================================
# 1. Copy this file to .env: cp .env.example .env
# 2. Fill in your actual values for all variables marked with "your_*_here"
# 3. Never commit the .env file to version control
# 4. The .env file is already included in .gitignore
# 5. For production, use environment variables or a secure secrets management system
